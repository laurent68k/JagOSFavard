#====================================================================
#	Macro & Assembler flags
#====================================================================

STADDR = 4000

ALNFLAGS = -l -m -a $(STADDR) x x

#====================================================================
#	Default Rules
#====================================================================

.SUFFIXES: .o .s
.s.o:
	mac -dUSE_CDROM $*

.SUFFIXES: .od .das
.das.od:
	mac -o$*.od $*.das

#====================================================================
#	EXECUTABLES
#====================================================================

player.db: player.o utils.o clear.o vidinit.o lister.o\
		intserv.o dspcode.od ..\\decomp\\gpucode.og\
		..\\decomp\\codec.o
	aln $(ALNFLAGS) -c player.lnk
	filefix player.abs

#====================================================================
#	EOF
