#====================================================================
#       Macro & Assembler flags
#====================================================================

STADDR = 802000
MACFLAGS = -fb -g
ALNFLAGS = -v -v -e -g -l -rd -a $(STADDR) x 4000

#====================================================================
#       Default Rules
#====================================================================
.SUFFIXES:      .o .s

.s.o:
	mac $(MACFLAGS) $*
#.tga.rgb:
#    dorgb $*.rgb $<

#====================================================================
#       EXECUTABLES
#====================================================================

OBJ = startup.o
 
startup.cof: $(OBJ)
	aln $(ALNFLAGS) -o startup.cof $(OBJ)

startup.o: startup.s
